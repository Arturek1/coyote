{% extends 'user.base' %}
{% set page_name = page_name|default('Wiadomości prywatne') %}
{% block title %}{{ page_name }} {{ parent() }}{% endblock %}

{% block content %}
    <h2>{{ page_name }}</h2>

    <nav class="nav nav-panel">
        <a href="{{ route('user.pm') }}" class="nav-item {{ parent != 'user.pm.submit' ? 'active' }}"><span>Wiadomości ({{ user('pm_unread') }}/{{ user('pm') }})</span></a>
        <a href="{{ route('user.pm.submit') }}" class="nav-item {{ parent == 'user.pm.submit' ? 'active' }}"><span>Napisz wiadomość</span></a>
    </nav>

    <div id="app-pm" class="card card-default">
        <div class="card-body">
            {% block pm %}
            {% endblock %}
        </div>
    </div>
{% endblock %}

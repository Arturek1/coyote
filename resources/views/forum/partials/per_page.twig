<span class="form-inline">
  <label class="mr-1">{{ label }}</label>

  <select name="perPage" class="form-control form-control-sm" data-url="{{ url(request().path()) }}">
      {% for i in 1..5 %}
        <option value="{{ i * 10 }}" {{ perPage == i * 10 ? 'selected="selected"' }}>{{ i * 10 }}</option>
      {% endfor %}
  </select>
</span>

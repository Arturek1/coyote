<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="csrf-token" content="{{ csrf_token() }}">

        {% block head %}
            <title>{%- block title -%} :: 4programmers.net{%- endblock -%}</title>

            <meta name="description" content="{% block description %}{% endblock %}">
            <meta name="keywords" content="{% block keywords %}{% endblock %}">
            <meta name="theme-color" content="#80a41a" />

            <meta property="og:url" content="{{ current_url() }}">
            <meta property="og:type" content="website">
            <meta property="og:title" content="{{ block('ogtitle') ?: block('title') }}">
            <meta property="og:description" content="{{ block('description') }}">
            <meta property="og:image" content="{{ block('logo') is defined ? block ('logo') : secure_asset('img/apple-touch.png') }}">

            <link rel="stylesheet" href="{{ cdn('css/main.css') }}">

            <script type="text/javascript">var _config = {{ __public|default('{}')|raw }};</script>
        {% endblock %}

        <link rel="apple-touch-icon" href="{{ asset('img/apple-touch.png') }}">
        <link rel="shortcut icon" href="{{ asset('img/favicon.png') }}" type="image/png">

        {{ render_region('head') }}
    </head>
    <body class="{{ auth_guest() or user('allow_sticky_header') ? 'fixed-top' }}">
        {{ render_region('body') }}

        {% block body %}
        {% import 'components.forms' as forms %}

        <div id="container-fluid">
            <header class="nav navbar-header {{ auth_guest() or user('allow_sticky_header') ? ' navbar-fixed-top' }} {{ __dark_theme ? 'navbar-dark' }}">
                <div class="navbar-border-top"></div>

                <div class="max-width">
                    <div class="clearfix">
                        <button type="button" class="navbar-toggle margin-sm-left" data-toggle="collapse" data-target=".nav-mobile">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                        <a class="navbar-brand" rel="home" href="{{ route('home') }}" title="4programmers.net - Strona główna">
                            <img src="{{ cdn('img/logo-mobile.png') }}">
                        </a>

                        <ul class="nav nav-desktop navbar-nav hidden-xs">
                            {% for item in __master_menu.roots() %}
                                <li {{ forms.attr(item.attr) }}>
                                    <a href="{{ item.url }}">{{ item.title|raw }}</a>

                                    {{ item.afterHTML|raw }}

                                    {% if item.hasChildren() %}
                                        <ul class="dropdown-menu left">
                                            {% for children in item.children() %}
                                                <li>
                                                    <a href="{{ children.url }}">{{ children.title }}</a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>

                        <form action="{{ search_url|default(route('search')) }}" class="navbar-form navbar-header-search navbar-right hidden-sm hidden-xs" role="search">
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="text" name="q" placeholder="{{ search_placeholder|default('Szukaj...') }}" value="{{ input_get('q') }}">

                                    <span class="input-group-btn">
                                        <button class="btn btn-link">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </form>

                        {% if auth_check()  %}
                            <div class="navbar-right dropdown nav-avatar hidden-xs">
                                <a href="javascript:" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <img src="{{ user_photo(user('photo')) }}" class="img-thumbnail" style="width: 35px">
                                </a>

                                <ul class="dropdown-menu right">
                                    <li><a class="profile-name" href="{{ route('user.home') }}">{{ user('name')  }}</a></li>
                                    <li class="divider"></li>
                                    <li><a href="{{ route('user.pm') }}"><i class="fa fa-envelope fa-fw"></i> Wiadomości</a></li>
                                    <li><a href="{{ route('user.settings') }}"><i class="fa fa-cog fa-fw"></i> Ustawienia</a></li>
                                    <li><a href="{{ route('profile', [user('id')]) }}"><i class="fa fa-user fa-fw"></i> Profil</a></li>
                                    <li><a href="{{ url('Pomoc') }}"><i class="fa fa-info-circle fa-fw"></i> Pomoc</a></li>

                                    {% if can('adm-access') %}
                                        <li><a href="{{ route('adm.home') }}"><i class="fa fa-user-secret fa-fw"></i> Panel administracyjny</a></li>
                                    {% endif %}

                                    <li class="divider"></li>

                                    <li>
                                        <a href="javascript:" class="js-change-menu">Nowe menu <sup class="label label-new">Beta</sup></a>
                                    </li>

                                    <li class="divider"></li>

                                    <li>
                                        {{ form_open({url: route('logout')}) }}
                                            <button type="submit" class="btn-sign-out"><i class="fa fa-sign-out fa-fw"></i> Wyloguj</button>
                                        {{ form_close() }}
                                    </li>
                                </ul>
                            </div>

                            <ul class="nav nav-auth navbar-nav pull-right">
                                <li id="btn-alerts" class="btn-alerts">
                                    <a href="{{ route('user.notifications') }}" data-url="{{ route('user.notifications.ajax') }}" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        {% if user('notifications_unread') %}
                                            <span class="badge">{{ user('notifications_unread') }}</span>
                                        {% endif %}

                                        <i class="fa fa-bell fa-fw"></i>
                                    </a>

                                    <div id="dropdown-alerts" class="dropdown-alerts dropdown-menu right">
                                        <div class="dropdown-header">
                                            <a title="Przejdź do listy powiadomień" href="{{ route('user.notifications') }}">Powiadomienia</a>

                                            <a id="btn-mark-read" title="Oznacz jako przeczytane" href="{{ route('user.notifications.mark') }}">
                                                <i class="fa fa-calendar-check-o"></i>
                                            </a>
                                        </div>
                                        <div class="dropdown-modal">
                                            <ul>

                                            </ul>
                                        </div>
                                    </div>
                                </li>

                                <li id="btn-messages" class="btn-messages">
                                    <a href="{{ route('user.pm') }}" data-url="{{ route('user.pm.ajax') }}" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        {% if user('pm_unread') %}
                                            <span class="badge">{{ user('pm_unread') }}</span>
                                        {% endif %}

                                        <i class="fa fa-envelope fa-fw"></i>
                                    </a>

                                    <div id="dropdown-messages" class="dropdown-menu dropdown-messages right">
                                        <div class="dropdown-header">
                                            <a title="Przejdź do listy wiadomości" href="{{ route('user.pm') }}">Wiadomości</a>

                                            <a id="btn-write-message" href="{{ route('user.pm.submit') }}">
                                                Wyślij wiadomość
                                            </a>
                                        </div>
                                        <div class="dropdown-modal">
                                            <ul>
                                                <li><i class="fa fa-spin fa-spinner"></i></li>
                                            </ul>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        {% else %}
                            <a class="btn btn-sm navbar-right navbar-btn btn-register hidden-xs" href="{{ route('register') }}"><i class="fa fa-sign-in"></i> Utwórz konto</a>
                            <a class="btn-sm navbar-right navbar-btn btn-login hidden-xs" href="{{ route('login') }}">Logowanie</a>
                        {% endif %}
                    </div>

                    <div class="visible-xs">
                        <ul class="collapse navbar-collapse nav navbar-nav nav-mobile">
                            {% for item in __master_menu.roots() %}
                                <li {{ forms.attr(item.attr) }}>
                                    <a href="{{ item.url }}">{{ item.title|raw }}</a>
                                </li>
                            {% endfor %}

                            <li class="divider"></li>

                            {% if auth_check() %}
                                <li><a href="{{ route('user.settings') }}"><i class="fa fa-cog fa-fw"></i> Ustawienia</a></li>
                                <li><a href="{{ route('profile', [user('id')]) }}"><i class="fa fa-user fa-fw"></i> Profil</a></li>

                                {% if can('adm-access') %}
                                    <li><a href="{{ route('adm.home') }}"><i class="fa fa-user-secret fa-fw"></i> Panel administracyjny</a></li>
                                {% endif %}

                                <li class="divider"></li>

                                <li>
                                    <a href="javascript:" class="js-change-menu">Nowe menu <sup class="label label-new">Beta</sup></a>
                                </li>

                                <li class="divider"></li>

                                <li>
                                    {{ form_open({url: route('logout')}) }}
                                        <button type="submit" class="btn-sign-out"><i class="fa fa-sign-out fa-fw"></i> Wyloguj</button>
                                    {{ form_close() }}
                                </li>
                            {% else %}
                                <li class="row">
                                    <div class="col-xs-6">
                                        <a class="btn btn-register btn-xs" href="{{ route('register') }}"><i class="fa fa-sign-in"></i> Utwórz konto</a>
                                    </div>
                                    <div class="col-xs-6">
                                        <a class="btn-login btn-xs visible-xs-block text-center" href="{{ route('login') }}">Logowanie</a>
                                    </div>
                                </li>
                            {% endif %}

                            <li class="divider"></li>

                            <li>
                                <form action="{{ search_url|default(route('search')) }}" role="search">
                                    <input type="text" name="q" placeholder="{{ search_placeholder|default('Szukaj...') }}" value="{{ input_get('q') }}" class="form-control input-sm">
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>

            {{ breadcrumb|raw }}

            {{ render_region('header') }}

            {% block fixed %}
                <div class="row max-width">
                    <div class="col-md-12">
                        {% if session_has('success') %}
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="alert alert-success margin-md-top">
                                        <i class="fa fa-check"></i>

                                        {{ session_get('success') }}
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        {% if session_has('error') %}
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="alert alert-danger margin-md-top">
                                        <i class="fa fa-exclamation-triangle"></i>

                                        {{ session_get('error') }}
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        {% block container %}

                        {% endblock %}
                    </div>
                </div>
            {% endblock %}

            <footer>
                <div id="footer-top">
                    <div class="row max-width">
                        <div class="col-xs-12">
                            <a href="https://www.facebook.com/4programmers.net" id="facebook-button" title="Zobacz nasz profil na facebooku!"></a>
                        </div>
                    </div>

                    {{ breadcrumb|raw }}
                </div>

                <div id="footer-inner">
                    {{ render_block('footer') }}

                    <a href="#top" class="back-to-top" title="Powrót na górę"><i class="fa fa-angle-up"></i></a>
                </div>

                <div id="footer-copyright">
                    <div class="row max-width">
                        <div class="col-lg-12">
                            <div class="pull-left">Copyright © 2000-{{ 'now'|date('Y') }} <a title="4programmers.net -- programowanie" class="logo" href="http://4programmers.net/">4programmers.net - programowanie i tworzenie stron WWW</a></div>

                            <div class="pull-right">Coyote {{ config('app.version') }}: {{ timer() }}</div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>

        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
        <script src="{{ cdn('js/runtime.js') }}"></script>
        <script src="{{ cdn('js/vendor.js') }}"></script>
        <script src="{{ cdn('js/app.js') }}"></script>
        <script src="{{ cdn('js/common.js') }}"></script>
        {% endblock %}
    </body>
</html>

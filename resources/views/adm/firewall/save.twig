{% extends 'adm.base' %}
{% block title %}Edycja banu {{ parent() }}{% endblock %}

{% block card %}
    {{ form(form) }}
{% endblock %}

{% block body %}
    {{ parent() }}

    <script type="text/javascript">
        $(function() {
            $(':checkbox[name="lifetime"]').change(function() {
                $('#expire-at').attr('disabled', $(this).is(':checked'));

                if ($(this).is(':checked')) {
                    $('#expire-at').val('');
                }
            })
            .trigger('change');
        });
    </script>
{% endblock %}
